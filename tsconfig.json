{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@management/*": [
        "apps/managment/src/*"
      ],
      "@management/test/*": [
        "apps/managment/test/*"
      ],
      "@code_cyclopedia/*": [
        "apps/code_cyclopedia/src/*"
      ],
      "@code_cyclopedia/test/*": [
        "apps/code_cyclopedia/test/*"
      ]
    }
  }
}
